@model LivroDigital.Models.RegisterViewModel
@{
    ViewBag.Title = "Registre-se";
}

<main aria-labelledby="title" class="container my-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <section id="registerForm" class="border rounded shadow p-4">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4 class="text-center">Criar uma nova conta</h4>
                    <hr />
                    @Html.ValidationSummary(true ,"", new { @class = "text-danger" })

                    <div class="form-group">
                        <strong>@Html.LabelFor(m => m.Email, new { @class = "control-label" })</strong>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Digite seu email", style = "max-width: 100%;" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <strong>@Html.LabelFor(m => m.Password, new { @class = "control-label" })</strong>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Digite sua senha", style = "max-width: 100%;" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <strong>@Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })</strong>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirme sua senha", style = "max-width: 100%;" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                    <br />

                    <div class="text-center">
                        <input type="submit" value="Registrar" class="btn btn-success w-100" />
                    </div>
                }
            </section>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
