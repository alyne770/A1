@model LivroDigital.Models.Usuario

@{
    ViewBag.Title = "Deletar Usuário";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">@ViewBag.Title</h4>
        </div>
        <div class="card-body">
            <h3>Tem certeza de que deseja deletar este usuário?</h3>
            <div class="mb-4">
                <h4>Detalhes do Usuário</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nome)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Telefone)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefone)</dd>
                </dl>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash"></i> Deletar
                    </button>
                    @Html.ActionLink("Voltar para a Lista", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
