@model LivroDigital.Models.Emprestimo

@{
    ViewBag.Title = "Deletar Empréstimo";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">@ViewBag.Title</h4>
        </div>
        <div class="card-body">
            <h3>Tem certeza de que deseja deletar este registro?</h3>
            <div class="mb-4">
                <h4>Detalhes do Empréstimo</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Livro.Titulo)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Livro.Titulo)</dd>

                    <dt class="col-sm-3">Usuário</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Usuario.Nome)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataEmprestimo)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.DataEmprestimo)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataDevolucao)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.DataDevolucao)</dd>
                </dl>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash"></i> Deletar
                    </button>
                    @Html.ActionLink("Voltar para a Lista", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
