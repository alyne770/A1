@model IEnumerable<LivroDigital.Models.Autor>

@{
    ViewBag.Title = "Autores";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="lead text-muted">Lista de Autores</h2>
        <a href="@Url.Action("Create", "Autores")" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Novo Autor
        </a>
    </div>

    <table class="table table-hover border shadow" style="border-radius: 0.5rem; overflow: hidden;">
        <thead class="bg-dark table-success text-white">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>@Html.DisplayNameFor(model => model.DataNascimento)</th>
                <th>@Html.DisplayNameFor(model => model.Nacionalidade)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="@((Model.ToList().IndexOf(item) % 2 == 0) ? "table-light" : "")">
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.DataNascimento)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nacionalidade)</td>
                    <td>
                        <a href="@Url.Action("Edit", "Autores", new { id = item.AutorId })"
                           class="btn btn-outline-success btn-sm mx-1" title="Editar">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="@Url.Action("Delete", "Autores", new { id = item.AutorId })"
                           class="btn btn-outline-danger btn-sm mx-1" title="Excluir">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
